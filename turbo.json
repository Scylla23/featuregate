{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "build/**"
            ],
            "inputs": [
                "src/**",
                "package.json",
                "tsconfig.json"
            ]
        },
        "lint": {
            "dependsOn": []
        },
        "typecheck": {
            "dependsOn": [
                "^build"
            ]
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "inputs": [
                "src/**",
                "test/**",
                "jest.config.js"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}